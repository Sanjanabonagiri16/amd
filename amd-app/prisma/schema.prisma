generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CallLog {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  phone      String
  strategy   String
  status     String
  rawResult  String?  // JSON stored as string for SQLite
  audioUrl   String?
  callSid    String?
}
